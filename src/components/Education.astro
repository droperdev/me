---
const { content } = Astro.props;
---

<div>
  <h2 class="text-3xl font-bold text-white mb-8 flex items-center">
    <svg
      class="mr-3 text-purple-400 w-8 h-8"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M12 14l9-5-9-5-9 5 9 5z"></path>
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"
      ></path>
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222"
      ></path>
    </svg>
    {content.sections.education}
  </h2>
  <div class="grid md:grid-cols-2 gap-6">
    {
      content.education.map((edu: any) => (
        <div class="bg-white/5 backdrop-blur-sm rounded-xl p-6 border border-purple-500/20 hover:border-purple-500/40 transition-all duration-300">
          <h3 class="text-xl font-bold text-white mb-2">{edu.degree}</h3>
          <p class="text-purple-300 mb-2">{edu.institution}</p>
          <p class="text-slate-400 text-sm">{edu.period}</p>
        </div>
      ))
    }
  </div>
</div>
